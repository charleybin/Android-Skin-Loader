<com.wuba.client.changeskin.test.SkinRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_main_bg">

    <com.wuba.client.changeskin.test.SkinTextView
        android:textColor="@color/skin_main_textcolor"
        android:background="@color/skin_main_text_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello_world" />

    <com.wuba.client.changeskin.test.SkinButton
        android:id="@+id/btn"
        android:text="换肤"
        android:layout_centerInParent="true"
        android:textColor="@color/skin_main_textcolor"
        android:background="@color/skin_main_text_bg"
        android:layout_width="100dip"
        android:layout_height="80dip" />

    <com.wuba.client.changeskin.test.SkinButton
        android:id="@+id/btn_2"
        android:layout_centerHorizontal="true"
        android:text="下一页"
        android:layout_below="@id/btn"
        android:layout_marginTop="30dip"
        android:textColor="@color/skin_main_textcolor"
        android:background="@color/skin_main_text_bg"
        android:layout_width="100dip"
        android:layout_height="80dip" />
    <androidx.appcompat.widget.Toolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.wuba.client.changeskin.test.SkinRelativeLayout>
